{
  "name": "solidity-audit-mcp",
  "version": "1.6.0",
  "description": "MCP Server for Solidity smart contract security audits",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "bin": {
    "solidity-audit-mcp": "./dist/index.js",
    "solidity-audit-server": "./dist/server.js",
    "solidity-audit-cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js dist/cli.js dist/server.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "audit": "tsx src/cli.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src __tests__",
    "lint:fix": "eslint src __tests__ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build",
    "check": "npm run typecheck && npm run lint && npm run test",
    "docker:build": "docker build -f docker/Dockerfile.saas -t solidity-audit-mcp .",
    "docker:run": "docker run -i --entrypoint node solidity-audit-mcp dist/index.js",
    "docker:cli": "docker run -v $(pwd):/contracts --entrypoint node solidity-audit-mcp dist/cli.js",
    "docker:shell": "docker run -it --entrypoint bash -v $(pwd):/contracts solidity-audit-mcp",
    "docker:dev:build": "docker build -f docker/Dockerfile.dev -t solidity-audit-mcp-dev .",
    "docker:dev:up": "docker-compose -f docker/docker-compose.yml --profile dev up -d",
    "docker:dev:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:dev:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "server": "node dist/server.js",
    "server:dev": "tsx src/server.ts",
    "saas:build": "docker build -f docker/Dockerfile.saas -t solidity-audit-saas .",
    "saas:up": "docker-compose -f docker/docker-compose.saas.yml up -d",
    "saas:down": "docker-compose -f docker/docker-compose.saas.yml down",
    "saas:logs": "docker-compose -f docker/docker-compose.saas.yml logs -f"
  },
  "files": [
    "dist",
    "README.md",
    "docker/"
  ],
  "keywords": [
    "mcp",
    "solidity",
    "smart-contracts",
    "security",
    "audit",
    "slither",
    "aderyn",
    "claude",
    "anthropic",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@nomicfoundation/slang": "^1.3.2",
    "better-sqlite3": "^12.6.2",
    "execa": "^9.5.2",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
