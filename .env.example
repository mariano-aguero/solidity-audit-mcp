# =============================================================================
# MCP Audit Server - Environment Variables
# =============================================================================
# Copy this file to .env and configure as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Server port (default: 3000)
PORT=3000

# Server host (default: 0.0.0.0 for Docker, use 127.0.0.1 for local only)
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------

# API Key for authentication (leave empty to disable)
# Generate a secure key: openssl rand -hex 32
MCP_API_KEY=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: debug, info, warn, error (default: info)
MCP_AUDIT_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Node.js
# -----------------------------------------------------------------------------

# Node environment: development, production (default: production)
NODE_ENV=production

# -----------------------------------------------------------------------------
# Solidity Compiler
# -----------------------------------------------------------------------------

# Default Solidity version for solc-select (default: 0.8.28)
# SOLC_VERSION=0.8.28

# -----------------------------------------------------------------------------
# Tool Timeouts (milliseconds)
# -----------------------------------------------------------------------------

# Timeout for Slither analysis (default: 300000 = 5 minutes)
# SLITHER_TIMEOUT=300000

# Timeout for Aderyn analysis (default: 300000 = 5 minutes)
# ADERYN_TIMEOUT=300000

# Timeout for Forge tests (default: 600000 = 10 minutes)
# FORGE_TIMEOUT=600000
